<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:top_margin="100vp"
        ohos:text="当前温度"
        ohos:text_size="40vp"
        />
    <Text
        ohos:id="$+id:text_tem"
        ohos:below="$id:text_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:top_margin="20vp"
        ohos:text="1"
        ohos:text_size="30vp"
        />
    <Text
        ohos:id="$+id:led_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:text_tem"
        ohos:text_alignment="center"
        ohos:top_margin="50vp"
        ohos:text="LED灯"
        ohos:text_size="40vp"
        />
    <Text
        ohos:id="$+id:led_status"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:led_title"
        ohos:text_alignment="center"
        ohos:top_margin="20vp"
        ohos:text="当前状态：Null"
        ohos:text_size="30vp"
        />
    <Button
        ohos:id="$+id:button_on"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:below="$id:led_status"
        ohos:align_parent_left="true"
        ohos:text="开"
        ohos:top_margin="20vp"
        ohos:text_size="30vp"
        />
    <Button
        ohos:id="$+id:button_off"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:below="$id:led_status"
        ohos:align_parent_right="true"
        ohos:text="关"
        ohos:top_margin="20vp"
        ohos:text_size="30vp"
        />

</DependentLayout>